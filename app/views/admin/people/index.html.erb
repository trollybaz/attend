<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.middle_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
        <td><%= link_to 'Show', admin_workspace_person_path(current_workspace, person) %></td>
        <td><%= link_to 'Edit', edit_admin_workspace_person_path(current_workspace, person) %></td>
        <td><%= link_to 'Destroy', admin_workspace_person_path(current_workspace, person), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_admin_workspace_person_path(current_workspace) %>
